@model ProjectPlatform.Models.PrijectFilesViewModels

@{
    ViewBag.Title = "Details";
}

<h2>Project Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Project.ProjectName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Project.ProjectName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Project.Subject)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Project.Subject)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Project.Class)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Project.Class)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Project.Grade)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Project.Grade)
        </dd>

        <dt>

    </dl>
</div>

<div style="overflow-y: scroll; overflow-x: hidden; height: 400px;">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>File</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Files)
            {
                var fileName = Path.GetFileName(item);
                <tr>
                    <td class="filterable-cell" style="word-break: keep-all;">@Html.ActionLink( fileName, "DownloadFile", new { Path = item, Name = fileName })</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Project.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
